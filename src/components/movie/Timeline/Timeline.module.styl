.Timeline
  content ''
  position relative
  width 100%
  height 100%

  overflow-x hidden
  overflow-y hidden
  user-select none

  display grid
  grid-template \
    "main right" 1fr \
    "bottom map" auto \
    / 1fr auto

.Content
  content ''
  grid-area main

.VerticalScroller
  content ''
  grid-area right
  width 4em

  background-color rgba(160, 255, 255, .4)

  display flex
  flex-direction column

  .ThumbContainer
    content ''
    height 100%

  .BeforeThumb
    content ''
    height calc(100% * var(--camera-progress-y))

  .Thumb
    content ''
    height calc(100% * var(--camera-ratio-y))

    background-color rgba(160, 0, 255, .4)

  .ThumbMargin
    content ''
    height calc(100% * var(--camera-ratio-y))

.HorizontalScroller
  content ''
  grid-area bottom
  width 100%
  height 4em

  background-color rgba(255, 160, 255, .4)

.MiniMap
  content ''
  grid-area map
  width 4em
  height 4em

  background-color rgba(255, 255, 160, .4)

.Layers
  content ''
  pointer-events none
  position absolute
  top calc(var(--camera-y) * 1px)
  left calc(var(--camera-x) * 1px)

  transform \
    scaleX(var(--camera-scale-x)) \
    scaleY(var(--camera-scale-y))

.Layer
  content ''
  height 1.8em

  &:nth-child(odd)
    background-color rgba(255, 255, 255, .05)
