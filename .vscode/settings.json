{
  "eslint.format.enable": true,
  "stylelint.validate": ["stylus"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.addMissingImports": true,
  },
  "task.allowAutomaticTasks": "on",
  "files.exclude": {
    "**/.DS_Store": true,
    ".pnpm-store": true,
    ".solid": true,
    "node_modules": true,
  }
}