{
  "name": "blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "compile:markdown5": "markdown5 compile --template template.html src out",
    "compile:sass": "sass src/style.scss out/style.css",
    "compile": "run-p compile:*",
    "lint:prettier": "prettier src --check",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint": "run-p lint:*",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:style": "npm run lint:style -- --fix",
    "fix": "run-s fix:*",
    "routine": "run-s fix compile",
    "monitor": "nodemon -e scss,m5 --ignore \"out/*\" --exec \"npm run routine\"",
    "new": "node new.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "markdown5": "^0.6.5",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0"
  }
}
