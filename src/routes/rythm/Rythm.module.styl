.Rythm
  content ''
  width 100%
  height 100%

  display flex

.Scroller
  content ''
  width 100%
  height 100%

  overflow-y scroll

  transform rotateX(180deg)

.ScrollContent
  content ''
  transform rotateX(180deg)

.Keyframe
  content ''
  position absolute
  width 1em
  aspect-ratio 1 / 1

  background-color #fff
  transform translateX(-50%) translateY(-50%)
