.MiniMap
  content ''
  position relative

.ScrollerThumb
  --max-y calc(100% - (100% * var(--camera-ratio-y)))
  --max-x calc(100% - (100% * var(--camera-ratio-x)))
  content ''
  position absolute
  top 0
  left 0
  width 100%
  max-width 100%
  height 100%
  max-height 100%

  background-color rgba(160, 0, 255, .4)

  display flex
  .Vertical &
    flex-direction column-reverse
  .Horizontal &
    flex-direction row-reverse

  .Map &
  .Vertical &
    top clamp(0%, calc(var(--max-y) * var(--camera-progress-y)), var(--max-y))
    height calc(100% * var(--camera-ratio-y))
  .Map &
  .Horizontal &
    left clamp(0%, calc(var(--max-x) * var(--camera-progress-x)), var(--max-x))
    width calc(100% * var(--camera-ratio-x))

.ScalerThumb
  content ''
  width 100%
  height 100%

  .Vertical &
    cursor row-resize
    height 10px
  .Horizontal &
    cursor col-resize
    width 10px
  .Map &
    display none

  background-color rgba(0, 0, 160, .4)
